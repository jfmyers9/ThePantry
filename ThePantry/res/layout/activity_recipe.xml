<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:orientation="vertical"
    tools:context=".RecipeActivity" >

<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    >

    <com.loopj.android.image.SmartImageView
        android:id="@+id/recipePic"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="10dp" />
    
    <TextView
        android:id="@+id/recipeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recipePic"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:textSize="10pt" />
    
    <ImageButton
        android:id="@+id/favorite"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/recipeName"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/recipeName"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:onClick="toggleFavorites" />
    
    <ImageButton
        android:id="@+id/cooked"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/recipeName"
        android:layout_alignTop="@+id/recipeName"
        android:layout_toLeftOf="@+id/favorite"
        android:layout_toRightOf="@+id/recipeName"
        android:onClick="toggleCooked" />
    
    <Button
        android:id="@+id/addtoshop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recipeName"
        android:layout_alignLeft="@+id/recipeName"
        android:layout_marginBottom="10dp"
        android:onClick="addToShopping"
        android:text="@string/add_to_shopping_list" />
    </RelativeLayout>
    
    <ListView 
        android:id="@+id/ingredList"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="10dp" >
    </ListView>
    
    <TextView
        android:id="@+id/directions"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        />
   
</LinearLayout>     
